<%= layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/volunteerprofile.css">
    <div class="container d-flex justify-content-center">
        <div class="content-profile-page m-0">
            <div class="profile-user-page card">
                <div class="img-user-profile">
                    <img class="profile-bgHome"
                        src="https://37.media.tumblr.com/88cbce9265c55a70a753beb0d6ecc2cd/tumblr_n8gxzn78qH1st5lhmo1_1280.jpg" />
                    <img class="avatar" src="http://gravatar.com/avatar/288ce55a011c709f4e17aef7e3c86c64?s=200"
                        alt="jofpin" />
                </div>
                <!-- <button>Follow</button> -->
                <div class="user-profile-data">
                    <h1>
                        <%= volunteer.name %>
                    </h1>

                </div>
                <div class="container p-3">
                    <div class="row">
                        <div class="col-6">
                            <div>
                                <h3>Email:</h3>
                                <span>
                                    <%= volunteer.email %>
                                </span>
                            </div>
                            <div>
                                <h3>Bio:</h3>
                                <span>
                                    <p>
                                        <%= volunteer.bio %>
                                    </p>
                                </span>
                            </div>

                        </div>
                        <div class="col-6">
                            <div>
                                <h3>Phone:<span>
                                        <%= volunteer.phone %>
                                    </span></h3>
                            </div>
                            <div>
                                <h3>Address:</h3>
                                <span>
                                    <p>
                                        <%= volunteer.address %>
                                    </p>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- <ul class="data-user">
                    <li><a><strong>3390</strong><span>Posts</span></a></li>
                    <li><a><strong>718</strong><span>Followers</span></a></li>
                    <li><a><strong>239</strong><span>Following</span></a></li>
                </ul> -->
            </div>
        </div>
    </div>