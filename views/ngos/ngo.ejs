<% layout("layouts/Boilerplate") %>
    <link rel="stylesheet" href="stylesheets/ngo.css">
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <h1>NGO'S</h1>
        </div>
        <div class="row mt-3">
            <% for( let ngo of ngos) { %>
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="card" style="width: 20rem;box-shadow: 0px 0px 23px 2px rgba(219,219,219,0.69);
                    -webkit-box-shadow: 0px 0px 23px 2px rgba(219,219,219,0.69);
                    -moz-box-shadow: 0px 0px 23px 2px rgba(219,219,219,0.69); border-radius: 10px;">
                        <div class="container-fluid px-3 pt-3">
                            <img class="card-img-top"
                                src="https://images.unsplash.com/flagged/photo-1569118311341-145748f3f338?ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8bmdvc3xlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                                alt="Card image cap">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">
                                <%=ngo.NgoName%>
                            </h3>
                            <h5 class="text-muted">
                                <%=ngo.owner%>
                            </h5>

                            <p class="card-text">
                                <%= ngo.description %>
                            </p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Events- <%= ngo.events.length %>
                            </li>


                        </ul>
                        <div class="card-body">
                            <a href="#" class="card-link"><button class="btn btn-success"
                                    style="border: 1px solid black;">Show
                                    Details</button></a>
                            <!-- <a href="#" class="card-link">Another link</a> -->
                        </div>
                    </div>
                </div>

                <% } %>
        </div>
    </div>