                <div class="row">
                  <div class="col-md-12">
                    <div class="card">
                      <div class="card-header">
                        <h4 class="card-title text-center"><strong>Edit Event</strong></h4>
                        <!-- <p class="card-category">Handcrafted by our friend <a target="_blank" href="https://github.com/mouse0270">Robert McIntosh</a>. Please checkout the <a href="http://bootstrap-notify.remabledesigns.com/" target="_blank">full documentation.</a></p> -->
                      </div>
                      <div class="card-body container">
                        <form action="/NGO/events/<%= data._id %>/edit" method="POST">
                            <div class="row">
                              
                              <div class="col-md-9 pr-1">
                                <div class="form-group">
                                  <label>Event Name</label>
                                  <input type="text" class="form-control" placeholder="Event Name" name="name" value="<%= data.name %>">
                                </div>
                              </div>
                             
                            </div>
                            <div class="row">
                              <div class="col-md-6 pr-1">
                                <div class="form-group">
                                  <label>Start Date</label>
                                  <input type="date" name="startDate" value="<%= data.startDate.toISOString().slice(0,10) %>" class="form-control">
                                </div>
                              </div>
                              <div class="col-md-6 pl-1">
                                <div class="form-group">
                                  <label>End Date</label>
                                  <input type="date" name="endDate" value="<%= data.endDate.toISOString().slice(0,10) %>" class="form-control" >
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <label>Address</label>
                                  <input type="text" class="form-control" name="address" placeholder="Home Address" value="Mumbai, Maharashtra">
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-6 pr-1">
                                <div class="form-group">
                                  <label>City</label>
                                  <input type="text" class="form-control" name="city" placeholder="City" value="Mumbai">
                                </div>
                              </div>
                              <div class="col-md-6 px-1">
                                <div class="form-group">
                                  <label>State</label>
                                  <input type="text" class="form-control" name='state' placeholder="State" value="Maharashtra">
                                </div>
                              </div>
                              <!-- <div class="col-md-4 pl-1">
                                <div class="form-group">
                                  <label>Postal Code</label>
                                  <input type="number" class="form-control" placeholder="ZIP Code">
                                </div>
                              </div> -->
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                <div style="height: fit-content;" class="form-group">
                                  <label>Event Info</label>
                                  <textarea rows="15" name="eventInfo" class="form-control textarea"><%= data.eventInfo %></textarea>
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-6" style="overflow: overlay;" >
                                <div class="table-responsive " style="overflow: overlay; height: 400px;" >
                                  <table class="table">
                                    <thead class=" text-primary">
                                      <th>
                                        Image
                                      </th>
                                     
                                      <th class="text-center">
                                       Preview
                                      </th>
                                      <th class="text-right">
                                        Delete
                                      </th>
                                    </thead>
                                    <tbody>
                                      <% for( let img of data.eventImage) { %>
                                      <tr id="<%= img.link %>">
                                        <td>
                                          <%= img.name%>
                                        </td>
                                        <td class="text-center preview"> 
                                         <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#exampleModal"><img src="https://img.icons8.com/ios/30/4a90e2/file-preview.png"/></a> 
                                        </td>
                                      
                                        <td id="hihi" class="text-right delete">
                                          <img src="https://img.icons8.com/material-rounded/24/fa314a/trash.png"/>
                                        </td>
                                      </tr>
                                      <% } %>
                                      
                                    </tbody>
                                  </table>
                                </div>
                              </div>
                              <div class="col-md-6">
                                <div >
                                 
                                  <label for="zz" class="btn btn-primary btn-round" style="color: white; width: 100%;">Upload Image</label>
                                  <input id="zz" style="display:none" type="file"    ><br><br>
                                  <div class="card">
                                    <img id="blah" src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fwww.jennybeaumont.com%2Fwp-content%2Fuploads%2F2015%2F03%2Fplaceholder.gif&f=1&nofb=1" alt="your image" style="height: 300px;" />
                                  </div>
                                  <a id="removeBtn"  class="btn btn-primary">Remove Image</a>  <a id="imgSave" class="btn btn-primary">Save Image</a>
                                  <!-- <input class="btn btn-primary" type="file" name="" id=""> -->
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="update ml-auto mr-auto">
                                
                                <button type="submit" class="btn btn-primary btn-round">Save changes</button>
                              </div>
                            </div>
                          </form>
                         
