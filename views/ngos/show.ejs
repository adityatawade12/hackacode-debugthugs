<% layout("layouts/boilerplate") %>
    <link rel="stylesheet" href="/stylesheets/show.css">
    <div class="profile">

        <div class="profile-banner" style="background-image:url('<%= ngo.coverImage %>');">

        </div>
        <div class="profile-picture">


            <!-- <a href="" class="follow">Follow <span class="entypo-plus"></span></a> -->

            <a href=""><img src='<%= ngo.logo %>'></a>
            <br>
            <span>
                <h3>
                    <%= ngo.NgoName %>
                </h3>

            </span>
            <br>

            <span><a href="/volunteer/apply/<%= ngo.slug %>"><button class="apply btn btn-success" style="width: 10em;">Apply</button></a></span>


        </div>
        <div class="container my-0 py-0">
            <div class="row">
                <div class="col-4 p-1">
                    <h4>Upcoming Events:</h4>
                    <ul class="px-3" style="font-size: medium;">
                        <% eventsC.forEach(function(e){ %>
                        <li><%= e.name %></li>
                        <% }) %>
                    </ul>
                    <hr>
                    <h4>Owner:</h4>
                    <h5 class=text-muted>
                        <%= ngo.owner %>
                    </h5>
                    <hr>
                    <h4>Past events</h4>
                    <ul class="px-3" style="font-size: medium;">
                        <% eventsP.forEach(function(e){ %>
                            <li><%= e.name %></li>
                        <% }) %>
                    </ul>
                    <br><br>
                    <a href="/volunteer/chat"><button class="btn btn-success">Go to ChatRoom</button></a>

                </div>
                <div class="col-8 p-1 ps-5">
                    <div class="container">
                        <h4>Description</h4>
                        <p style="font-size: medium;">
                            <%= ngo.description %>
                        </p>
                        <h4>Events</h4>
                        <div class="container">
                            <div class="row">
                                <% ngo.events.forEach(function(e) {%>
                                    <div class="col-12">
                                        <div class="card" style="width: 100%">
                                            <img src=<%=e.eventImage[0].link %>
                                            class="card-img-top" alt="...">
                                            <div class="card-body">
                                                <h3 class="card-title">
                                                    <%= e.name %>
                                                </h3>
                                                <p class="card-text">
                                                    <%= e.eventInfo %>
                                                </p>
                                                <h5 class="text-muted">
                                                    <%= e.startDate %>-<%=e.endDate%>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>