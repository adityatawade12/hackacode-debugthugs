      </nav>
      <!-- End Navbar -->

      <div class="content">
        <div class="row">
          <div class="col-md-4">
            <div class="card card-user">
              <div class="image">
                <img src="<%= myNgo.coverImage %>"  width="100%" height="100%">
              </div>
              <div class="card-body">
                <div class="author">
                  <a href="#">
                    <img class="avatar border-gray" src="<%= myNgo.logo %>" >
                    <h5 class="title"><%= user.name %></h5>
                  </a>
                </div>
                <hr>
                <div class="button-container">
                  <div class="row">
                    <div class="col-md-6 col-6 ml-auto">
                      <h5><%= myNgo.events.length %><br><small>Events</small></h5>
                    </div>
                    <div class="col-md-6 col-6 ml-auto mr-auto">
                      <h5><%= myNgo.volunteers.length %><br><small>Volunteers</small></h5>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card" style="height: 270px;">
              <div class="card-header">
                <h4 class="card-title">Volunteers</h4>
              </div>
              <div class="card-body p-3" style="overflow-y:scroll;">
                <ul class="list-unstyled team-members">
                  <% myNgo.volunteers.forEach(function (vol) { %>
                    <li>
                      <div class="row">
                        <div class="col-md-2 col-2">
                          <div class="avatar">
                            <img src='<%= vol.profilePic %>' alt="Circle Image"
                              class="img-circle img-no-padding img-responsive">
                          </div>
                        </div>
                        <div class="col-md-7 col-7">
                          <%= vol.name %>
                          <br />
                          <span class="text-muted"><small>Offline</small></span>
                        </div>
                        <div class="col-md-3 col-3 text-right">
                          <btn class="btn btn-sm btn-outline-success btn-round btn-icon"><i class="fa fa-envelope"></i>
                          </btn>
                        </div>
                      </div>
                    </li>
                  <% }) %>

                  <% if(myNgo.volunteers.length == 0){ %>
                    <h4>No Volunteers till now</h4>
                  <% } %>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card card-user">
              <div class="card-header">
                <h5 class="card-title">Edit Profile</h5>

              </div>

              <div class="card-body">
                <form action="/NGO/EditNgoProfile?_method=PUT" method="POST" enctype="multipart/form-data">
                  <div class="row">
                    <div class="col-md-5 pr-1">
                      <div class="form-group">
                        <label>NGO name</label>
                        <input type="text" class="form-control" placeholder="NGO Name" name="NgoName"
                          value="<%= myNgo.NgoName %>">
                      </div>
                    </div>
                    <div class="col-md-3 px-1">
                      <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" disabled placeholder="Username"
                          value='<%= user.name %>'>
                      </div>
                    </div>
                    <div class="col-md-4 pl-1">
                      <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" disabled placeholder="Email" value='<%= user.email %>'>
                      </div>
                    </div>
                  </div>
                  <div class="row d-flex justify-content-center">
                    <div class="col-md-6 pr-1">
                      <div class="form-group">
                        <a href="" class="btn btn-primary">Profile Photo<input type="file" class="form-control"
                            placeholder="" name="profile"></a>
                      </div>
                    </div>
                    <div class="col-md-6 pl-1">
                      <div class="form-group">
                        <a href="" class="btn btn-primary">Cover Photo<input type="file" class="form-control"
                            placeholder="" name="cover"></a>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control textarea" name="description"><%= myNgo.description %></textarea>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>About Us</label>
                        <textarea class="form-control textarea"></textarea>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="update ml-auto mr-auto">
                      <button type="submit" class="btn btn-primary btn-round">Update Profile</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
