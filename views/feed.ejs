            <div class="col-md-8 d-flex flex-column align-items-center">
                <% for( let post of posts) { %>
                <div class="card" style="margin-top: 20px;width: 80%;">
                    <div class="card-body">
                        <div style="display: inline-block;margin-bottom: 10px;"><img src="<%= post.authorImg %>"
                                style="height: 50px;width: 50px;border-radius: 50%;" alt=""></div>
                        <h5 style="display: inline-block;margin-left: 10px;" class="card-title"><%= post.author %></h5>
                        <h6><%= post.heading %></h6>
                        <p style="font-size: 0.95em;" class="card-text"><%= post.text %></p>
                        <p class="card-text"><small class="text-muted"><%= post.posted %></small></p>
                    </div>
                    <img src="<%= post.postImg %>" style="height: 300px;" class="card-img-bottom" alt="...">
